= render 'layouts/navbar', title: 'User Profile'
.content
  .container-fluid
    .row
      .col-md-8
        .card
          .card-header.card-header-primary
            %h4.card-title Edit Profile
            %p.card-category Complete your profile
          .card-body
            %form
              .row
                .col-md-5
                  .form-group
                    %label.bmd-label-floating Company (disabled)
                    %input.form-control{:disabled => "disabled", :type => "text"}/
                .col-md-3
                  .form-group
                    %label.bmd-label-floating Username
                    %input.form-control{:type => "text"}/
                .col-md-4
                  .form-group
                    %label.bmd-label-floating Email address
                    %input.form-control{:type => "email"}/
              .row
                .col-md-6
                  .form-group
                    %label.bmd-label-floating Fist Name
                    %input.form-control{:type => "text"}/
                .col-md-6
                  .form-group
                    %label.bmd-label-floating Last Name
                    %input.form-control{:type => "text"}/
              .row
                .col-md-12
                  .form-group
                    %label.bmd-label-floating Adress
                    %input.form-control{:type => "text"}/
              .row
                .col-md-4
                  .form-group
                    %label.bmd-label-floating City
                    %input.form-control{:type => "text"}/
                .col-md-4
                  .form-group
                    %label.bmd-label-floating Country
                    %input.form-control{:type => "text"}/
                .col-md-4
                  .form-group
                    %label.bmd-label-floating Postal Code
                    %input.form-control{:type => "text"}/
                .col-md-4
                  .form-group
                    %label.mbd-label-floating Date
                    .d-flex
                      %input.form-control
                      %i.material-icons.datepicker calendar_today
                .col-md-4
                  .form-group
                    %label.mbd-label-floating Time
                    .d-flex
                      %input.form-control
                      %i.material-icons.timepicker schedule
              .row
                .col-md-12
                  .form-group
                    %label About Me
                    .form-group
                      %label.bmd-label-floating Lamborghini Mercy, Your chick she so thirsty, I'm in that two seat Lambo.
                      %textarea.form-control{:rows => "5"}
              %button.btn.btn-primary.pull-right{:type => "submit"} Update Profile
              .clearfix
      .col-md-4
        .card.card-profile
          .card-avatar
            %a{:href => "#pablo"}
              %img.img{:src => asset_pack_path('media/faces/marc.jpg') }/
